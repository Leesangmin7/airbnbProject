extends ../layout

block content
  .container
    h1.page-header 게시판 수정
    form(action='/posts/#{post._id}?_method=PUT', method='POST')
      .form-group
        label(for='title') Title
        input.form-control(type='text', id='title', name='title', placeholder='Your title', value=post.title)
      .form-group
        label(for='body') body
        input.form-control(type='text', id='body', name='body', placeholder='body', value=post.body)
      div.form-actions
        a.btn.btn-default(href='javascript:window.history.back();') 뒤로 
        | 
        button.btn.btn-primary(type='submit') 수정
